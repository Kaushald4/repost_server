generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum NotificationType {
  POST_REPLY
  COMMENT_REPLY
  MENTION
  UPVOTE
  FOLLOW
  CHAT_MESSAGE
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  entityId  String?
  message   String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
}
