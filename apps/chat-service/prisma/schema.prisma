generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum ChatType {
  DIRECT
  GROUP
}

model ChatRoom {
  id        String   @id @default(cuid())
  type      ChatType
  createdAt DateTime @default(now())
}

model ChatMember {
  id       String   @id @default(cuid())
  roomId   String
  userId   String
  joinedAt DateTime @default(now())
}

model ChatMessage {
  id        String   @id @default(cuid())
  roomId    String
  senderId  String
  text      String?
  createdAt DateTime @default(now())
}
