generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model PostVote {
  id     String @id @default(cuid())
  postId String
  userId String
  value  Int
}

model CommentVote {
  id        String @id @default(cuid())
  commentId String
  userId    String
  value     Int
}

model UserScore {
  id     String @id @default(cuid())
  userId String
  karma  Int    @default(0)
  score  Int    @default(0)
}
