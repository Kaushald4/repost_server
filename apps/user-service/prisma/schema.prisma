generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  username    String   @unique
  displayName String?
  avatar      String?
  banner      String?
  bio         String?
  isPrivate   Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model UserSettings {
  id       String  @id @default(cuid())
  userId   String  @unique
  darkMode Boolean @default(false)
  allowDMs Boolean @default(true)
}

model UserBlock {
  id        String   @id @default(cuid())
  blockerId String
  blockedId String
  createdAt DateTime @default(now())
}

model UserMute {
  id        String   @id @default(cuid())
  muterId   String
  mutedId   String
  createdAt DateTime @default(now())
}
