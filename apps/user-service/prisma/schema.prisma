generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  username    String   @unique
  displayName String?
  bio         String?
  isPrivate   Boolean  @default(false)
  createdAt   DateTime @default(now())

  karma Int @default(0)
  level Int @default(1)

  stats  UserStats?
  badges UserBadge[]

  avatarId String? @unique
  avatar   Avatar? @relation(fields: [avatarId], references: [id])
  bannerId String? @unique
  banner   Banner? @relation(fields: [bannerId], references: [id])

  settings UserSettings?

  isVerified Boolean @default(false)
}

model UserStats {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  helper   Int @default(0)
  debate   Int @default(0)
  creative Int @default(0)
}

model UserBadge {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  badgeName String // e.g., 'newbie', 'helpful'
  earnedAt  DateTime @default(now())

  @@unique([userId, badgeName])
}

model Avatar {
  id     String @id @default(cuid())
  url    String
  fileId String @unique
  user   User?
}

model Banner {
  id     String @id @default(cuid())
  url    String
  fileId String @unique
  user   User?
}

model UserSettings {
  id       String  @id @default(cuid())
  userId   String  @unique
  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  darkMode Boolean @default(false)
  allowDMs Boolean @default(true)
}

model UserBlock {
  blockerId String
  blockedId String
  createdAt DateTime @default(now())

  @@id([blockerId, blockedId])
}

model UserMute {
  muterId   String
  mutedId   String
  createdAt DateTime @default(now())

  @@id([muterId, mutedId])
}
