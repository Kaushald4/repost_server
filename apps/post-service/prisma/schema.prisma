generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PostType {
  TEXT
  IMAGE
  POLL
  VIDEO
  MIXED
}

model Post {
  id          String   @id @default(cuid())
  authorId    String
  communityId String?
  title       String
  content     String?
  type        PostType @default(TEXT)
  isAnonymous Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  viewCount   Int      @default(0)
}

model PostImage {
  id     String @id @default(cuid())
  postId String
  url    String
}

model PollOption {
  id     String @id @default(cuid())
  postId String
  text   String
  votes  Int    @default(0)
}

model PostTag {
  id     String @id @default(cuid())
  postId String
  tag    String
}

model PostDraft {
  id        String   @id @default(cuid())
  authorId  String
  title     String?
  content   String?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
