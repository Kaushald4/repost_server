generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Comment {
  id        String   @id @default(cuid())
  postId    String
  authorId  String
  parentId  String?
  content   String
  createdAt DateTime @default(now())
}

model CommentQuote {
  id        String @id @default(cuid())
  sourceId  String
  commentId String
}
